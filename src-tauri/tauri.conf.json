{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Exology",
  "version": "0.1.0",
  "identifier": "me.zyl.exology",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "Exology",
        "width": 1920,
        "height": 1080,
        "resizable": false,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
